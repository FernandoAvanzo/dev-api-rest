{
  "openapi": "3.1.0",
  "info": {
    "title": "Digital Dock Account API",
    "version": "1.0.0",
    "description": "API to manage Digital Dock accounts and holders"
  },
  "paths": {
    "/portadores": {
      "post": {
        "summary": "Criar portador",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nomeCompleto": {
                    "type": "string"
                  },
                  "cpf": {
                    "type": "string"
                  }
                },
                "required": ["nomeCompleto", "cpf"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Portador criado com sucesso"
          },
          "400": {
            "description": "CPF inválido ou já existente"
          }
        }
      },
      "delete": {
        "summary": "Remover portador",
        "parameters": [
          {
            "name": "cpf",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Portador removido com sucesso"
          },
          "404": {
            "description": "Portador não encontrado"
          }
        }
      }
    },
    "/contas": {
      "post": {
        "summary": "Criar conta",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "cpf": {
                    "type": "string"
                  }
                },
                "required": ["cpf"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Conta criada com sucesso"
          },
          "400": {
            "description": "CPF inválido ou portador não encontrado"
          }
        }
      },
      "get": {
        "summary": "Consultar conta",
        "parameters": [
          {
            "name": "cpf",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Detalhes da conta",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "saldo": {
                      "type": "number"
                    },
                    "numero": {
                      "type": "string"
                    },
                    "agencia": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Conta não encontrada"
          }
        }
      },
      "delete": {
        "summary": "Fechar conta",
        "parameters": [
          {
            "name": "cpf",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Conta fechada com sucesso"
          },
          "404": {
            "description": "Conta não encontrada"
          }
        }
      }
    },
    "/contas/bloqueio": {
      "post": {
        "summary": "Bloquear conta",
        "parameters": [
          {
            "name": "cpf",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Conta bloqueada com sucesso"
          },
          "404": {
            "description": "Conta não encontrada"
          }
        }
      }
    },
    "/contas/desbloqueio": {
      "post": {
        "summary": "Desbloquear conta",
        "parameters": [
          {
            "name": "cpf",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Conta desbloqueada com sucesso"
          },
          "404": {
            "description": "Conta não encontrada"
          }
        }
      }
    },
    "/transacoes/deposito": {
      "post": {
        "summary": "Depositar na conta",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "cpf": {
                    "type": "string"
                  },
                  "valor": {
                    "type": "number"
                  }
                },
                "required": ["cpf", "valor"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Depósito realizado com sucesso"
          },
          "400": {
            "description": "Conta bloqueada ou inativa"
          },
          "404": {
            "description": "Conta não encontrada"
          }
        }
      }
    },
    "/transacoes/saque": {
      "post": {
        "summary": "Saque na conta",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "cpf": {
                    "type": "string"
                  },
                  "valor": {
                    "type": "number"
                  }
                },
                "required": ["cpf", "valor"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Saque realizado com sucesso"
          },
          "400": {
            "description": "Saldo insuficiente, conta bloqueada ou inativa"
          },
          "404": {
            "description": "Conta não encontrada"
          }
        }
      }
    },
    "/contas/extrato": {
      "get": {
        "summary": "Consultar extrato por período",
        "parameters": [
          {
            "name": "cpf",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "dataInicio",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "dataFim",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Extrato da conta",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "data": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "tipo": {
                        "type": "string"
                      },
                      "valor": {
                        "type": "number"
                      },
                      "descricao": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Conta não encontrada"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Portador": {
        "type": "object",
        "properties": {
          "nomeCompleto": {
            "type": "string"
          },
          "cpf": {
            "type": "string"
          }
        },
        "required": ["nomeCompleto", "cpf"]
      },
      "Conta": {
        "type": "object",
        "properties": {
          "cpf": {
            "type": "string"
          },
          "saldo": {
            "type": "number"
          },
          "numero": {
            "type": "string"
          },
          "agencia": {
            "type": "string"
          },
          "bloqueada": {
            "type": "boolean"
          }
        },
        "required": ["cpf", "numero", "agencia", "saldo", "bloqueada"]
      },
      "Transacao": {
        "type": "object",
        "properties": {
          "cpf": {
            "type": "string"
          },
          "valor": {
            "type": "number"
          }
        },
        "required": ["cpf", "valor"]
      },
      "Extrato": {
        "type": "object",
        "properties": {
          "data": {
            "type": "string",
            "format": "date-time"
          },
          "tipo": {
            "type": "string"
          },
          "valor": {
            "type": "number"
          },
          "descricao": {
            "type": "string"
          }
        },
        "required": ["data", "tipo", "valor", "descricao"]
      }
    }
  }
}